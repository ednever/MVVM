<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM.Views.DBFriendPage">
    <StackLayout>
        <Label Text="Nimi" />
        <Entry Text="{Binding Name}" />
        <Label Text="Email" />
        <Entry Keyboard="Email" Text="{Binding Email}" />
        <Label Text="Telefon" />
        <Entry Keyboard="Telephone"  Text="{Binding Phone}" />
        <StackLayout Orientation="Horizontal">
            <Button Text="Salvesta" Clicked="SaveFriend" />
            <Button Text="Kustuta" Clicked="DeleteFriend" />
            <Button Text="Tagasi" Clicked="Cancel" />
        </StackLayout>
    </StackLayout>
</ContentPage>
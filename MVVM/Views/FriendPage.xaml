<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM.Views.FriendPage">
    <StackLayout>
        <StackLayout x:Name="friendStack">
            <Label Text="Nimi" />
            <Entry Text="{Binding Name}" FontSize="Medium" />
            <Label Text="Email" />
            <Entry Text="{Binding Email}" FontSize="Medium" />
            <Label Text="Telefoon" />
            <Entry Text="{Binding Phone}" FontSize="Medium" />
        </StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button Text="Lisa" Command="{Binding ListViewModel.SaveFriendCommand}" CommandParameter="{Binding}" />
            <Button Text="Kustuta" Command="{Binding ListViewModel.DeleteFriendCommand}" CommandParameter="{Binding}" />
            <Button Text="Tagasi" Command="{Binding Path=ListViewModel.BackCommand}" />
        </StackLayout>
    </StackLayout>
</ContentPage>